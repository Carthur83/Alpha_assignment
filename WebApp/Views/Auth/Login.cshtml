@{
    Layout = "_LogInLayout";
    ViewData["Title"] = "Login";
}

<div class="center-screen">
    <div id="login" class="form-container">
        <h1>Login</h1>
        <form method="post" asp-controller="Auth" asp-action="Login">
            <div class="form-group mb-4">
                <label class="form-label">Email</label>
                <input class="form-control" placeholder="Your email address">
                <span></span>
            </div>
            <div class="form-group mb-4">
                <label class="form-label">Password</label>
                <input class="form-control" placeholder="Enter your password">
                <span></span>
            </div>
            <div class="form-check mb-3 mt-1">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Remember Me
                </label>
            </div>
            <button class="btn btn-accent mt-1">Log In</button>
        </form>

        <p>Don't have an account? <a asp-controller="Auth" asp-action="CreateAccount">Sign Up</a></p>
    </div>

</div>