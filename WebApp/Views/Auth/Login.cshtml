@model MemberLogInForm

@{
    Layout = "_LogInLayout";
    ViewData["Title"] = "Login";
}

<div class="center-screen">
    <div id="login" class="form-container">
        <h1>Login</h1>
        <form method="post" asp-controller="Auth" asp-action="Login" novalidate>
            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control">
                <span></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control">
                <span></span>
            </div>
            <div class="form-check mb-3 mt-1">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Remember Me
                </label>
            </div>
            <div class="form-group">
                <span class="error-message">
                    @ViewBag.ErrorMessage
                </span>
            </div>
            <button type="submit" class="btn btn-accent mt-1">Log In</button>
        </form>

        <p>Don't have an account? <a asp-controller="Auth" asp-action="CreateAccount">Sign Up</a></p>
    </div>

</div>