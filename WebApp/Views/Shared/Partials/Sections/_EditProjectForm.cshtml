@model EditProjectForm

<section id="edit-project" class="custom-modal">
    <div class="custom-modal-content">
        <div class="custom-modal-header">
            <h3>Edit Project</h3>
            <button type="button" class="btn-close" data-close="true"></button>
        </div>

        <div class="img-box">
            <img src="~/images/ProjectImage-Big.svg" alt="">
        </div>

        <form id="edit-form" method="post" asp-action="Edit" asp-controller="Projects">
            <input asp-for="Id" type="hidden" />

            <div class="form-group">
                <label asp-for="ProjectName" class="form-label"></label>
                <input asp-for="ProjectName" class="form-control">
                <span asp-validation-for="ProjectName"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClientId" class="form-label"></label>
                <select asp-for="ClientId" class="form-control">
                    <option value="" disabled selected>-- Select client --</option>
                </select>
                <span asp-validation-for="ClientId"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="EditRichTextContent">Description</label>
                <div class="wysiwyg">
                    <textarea class="form-control" asp-for="EditRichTextContent"></textarea>
                    <div id="edit-project-wysiwyg-editor" class="wysiwyg-editor"></div>
                    <div id="edit-project-wysiwyg-toolbar" class="wysiwyg-toolbar">
                        <span class="ql-formats">
                            <button class="ql-bold"></button>
                            <button class="ql-italic"></button>
                            <button class="ql-underline"></button>
                        </span>
                        <span class="ql-formats">
                            <button class="ql-align" value=""></button>
                            <button class="ql-align" value="center"></button>
                            <button class="ql-align" value="right"></button>
                        </span>
                        <span class="ql-formats">
                            <button class="ql-list" value="bullet"></button>
                            <button class="ql-list" value="ordered"></button>
                        </span>
                        <span class="ql-formats">
                            <button class="ql-link"></button>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group date-group">
                <div class="flex-grow-1  group-item">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" type="date" class="form-control">
                    <span asp-validation-for="StartDate"></span>
                </div>
                <div class="flex-grow-1  group-item">
                    <label asp-for="EndDate" class="form-label"></label>
                    <input asp-for="EndDate" type="date" class="form-control">
                    <span asp-validation-for="EndDate"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Budget" class="form-label"></label>
                <input asp-for="Budget" class="form-control">
                <span asp-validation-for="Budget"></span>
            </div>

            <div class="form-group">
                <label asp-for="StatusId" class="form-label">Status</label>
                <select asp-for="StatusId" class="form-control">
                    <option value="">-- Select status --</option>
                </select>
                <span asp-validation-for="StatusId"></span>
            </div>

            <button type="submit" class="btn btn-login w-100 mt-4">Save</button>

        </form>
    </div>
</section>

<script>
    let quill;
    document.addEventListener('DOMContentLoaded', function () {
     quill = initWysiwyg('#edit-project-wysiwyg-editor', '#edit-project-wysiwyg-toolbar', '#EditRichTextContent', '@Html.Raw(Model.EditRichTextContent ?? "Tom")')
    })
</script>

