
<div></div>
<div class="btn-container">
    <button type="button" class="btn-menu" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-gear-fill"></i>
    </button>
    <ul class="dropdown-menu dropdown-menu-end">
        <li class="user">
            <img src="~/images/UserImage1.svg" alt="User Icon">
            <span>@ViewData["UserName"]</span>
        </li>
        <li class="logout">
            <img src="~/images/Logout.svg" alt="">
            <a asp-controller="Auth" asp-action="LogOut" class="dropdown-item" >Logout</a>
        </li>
    </ul>
</div>

<div class="image-container">
    <img src="~/images/UserImage1.svg" alt="User Icon">
</div>